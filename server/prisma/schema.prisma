// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- TUS MODELOS (Epica: Gestión de Carta) ---

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  description    String?
  price          Decimal  @db.Decimal(10, 2)
  image          String?  // URL de Cloudinary
  ingredients    String?  // Ej: "Tomate, Albahaca, Mozzarella"
  
  // Features de estado
  isAvailable    Boolean  @default(true)  // Switch "Agotado"
  isNew          Boolean  @default(false) // Badge "Nuevo"
  isDailySpecial Boolean  @default(false) // Carrusel "Platos del Día"
  
  categoryId     Int
  category       Category @relation(fields: [categoryId], references: [id])
  createdAt      DateTime @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  customer  String
  address   String?
  type      String   // "DELIVERY" o "RETIRO"
  total     Float
  details   String   // Aquí guardamos qué pidió (Ej: "2x Hamburguesas...")
  createdAt DateTime @default(now())
}